{
  "private": true,
  "scripts": {
    "cleanup": "rm -rfd build && rm -rfd docs",
    "build": "yarn cleanup && NODE_ENV=production next build && next export -o build",
    "start": "next dev",
    "publish": "yarn build && mkdir docs && cp -r build/* docs && touch docs/.nojekyll",
    "typecheck": "tsc"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "date-fns": "^2.28.0",
    "gray-matter": "^4.0.3",
    "next": "latest",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.3",
    "react-syntax-highlighter": "^15.5.0",
    "reading-time-estimator": "^1.7.2",
    "remark": "^14.0.2",
    "remark-gfm": "^3.0.1",
    "remark-html": "^15.0.1",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@types/node": "^18.0.3",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/react-syntax-highlighter": "^15",
    "autoprefixer": "^10.4.7",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.1.4"
  },
  "packageManager": "yarn@3.2.2"
}
